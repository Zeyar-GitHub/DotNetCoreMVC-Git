@model IEnumerable<DotNetCoreMVC.Models.EmployeeModel.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>
<a href="@Url.Action("EmployeeCreate")" class="btn btn-success mb-3">Create New Employee</a>
<a href="@Url.Action("Logout", "Account")" class="btn btn-danger mb-3">Logout</a>
<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Designation</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.Designation</td>
                <td>@employee.Department</td>
                <td>
                    <a href="@Url.Action("EmployeeEdit", new { id = employee.EmployeeID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("EmployeeDeleteConfirm", new { id = employee.EmployeeID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

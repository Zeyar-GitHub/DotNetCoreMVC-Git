@model DotNetCoreMVC.Models.EmployeeModel.AddEmployeeViewModel

@{
    ViewData["Title"] = "Create Employee";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Create Employee</h2>

        <form asp-controller="Employee" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="EmployeeName" class="control-label">Name</label>
                <input asp-for="EmployeeName" class="form-control" autofocus/>
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Designation" class="control-label">Designation</label>
                <input asp-for="Designation" class="form-control" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Department" class="control-label">Department</label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

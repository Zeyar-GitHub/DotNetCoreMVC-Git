@model IEnumerable<DotNetCoreMVC.Models.EmployeeModel.Employee>

<div class="container">
    <h2 class="mb-4">Employee List</h2>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.Designation</td>
                    <td>@employee.Department</td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeID" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 
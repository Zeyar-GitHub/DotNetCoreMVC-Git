@model IEnumerable<DotNetCoreMVC.Models.EmployeeModel.Employee>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Employee List</h2>
        <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
    </div>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int serialNumber = 1;
            }
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@serialNumber</td>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.Designation</td>
                    <td>@employee.Department</td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeID" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</button>
                        </form>
                    </td>
                </tr>
                serialNumber++;
            }
        </tbody>
    </table>
</div> 